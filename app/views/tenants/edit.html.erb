<% content_for :title, "Editing tenant" %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto bg-white shadow-xl rounded-lg overflow-hidden">
    <div class="p-6">
      <h1 class="text-3xl font-bold text-gray-800 mb-6 border-b pb-4">
        Edit Tenant Configuration
      </h1>

      <%# Render the form %>
      <%= render "form", tenant: @tenant %>

      <%# Action Buttons with Enhanced Design %>
      <div class="mt-6 flex justify-between items-center">
        <div class="flex space-x-4">
          <%# Show Tenant Button %>
          <%= link_to @tenant, class: "group flex items-center space-x-2 text-blue-600 hover:text-blue-800 transition duration-300" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transform group-hover:scale-110" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            <span class="font-medium">View Tenant Details</span>
          <% end %>

          <%# Back to Tenants Button %>
          <%= link_to tenants_path, class: "group flex items-center space-x-2 text-gray-600 hover:text-gray-800 transition duration-300" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transform group-hover:scale-110" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span class="font-medium">Back to Tenants</span>
          <% end %>
        </div>

        <%# Optional: Delete Tenant Button %>
        <%= button_to @tenant, method: :delete, data: { confirm: "Are you sure you want to delete this tenant? This action cannot be undone." }, 
            class: "group flex items-center space-x-2 text-red-500 hover:text-red-700 transition duration-300" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transform group-hover:scale-110" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          <span class="font-medium">Delete Tenant</span>
        <% end %>
      </div>
    </div>
  </div>
</div>