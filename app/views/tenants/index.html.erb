<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%# Header Section %>
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Organizations</h1>
        <p class="mt-1 text-sm text-gray-500">Manage your tenant organizations</p>
      </div>

      <%= link_to new_tenant_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        New Organization
      <% end %>
    </div>

    <%# Tenants Grid %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @tenants.each do |tenant| %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 hover:border-gray-300 transition-all">
          <%# Card Header %>
          <div class="p-6">
            <div class="flex items-center space-x-4">
              <%# Tenant Avatar %>
              <div class="flex-shrink-0">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-indigo-600 to-blue-600 flex items-center justify-center text-white text-xl font-bold">
                  <%= tenant.name[0].upcase %>
                </div>
              </div>

              <%# Tenant Info %>
              <div class="flex-1 min-w-0">
                <h2 class="text-lg font-semibold text-gray-900 truncate">
                  <%= tenant.name %>
                </h2>
                <p class="text-sm text-gray-500 truncate font-mono">
                  <%= tenant.subdomain %>.example.com
                </p>
              </div>

              <%# Status Badge %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_badge_class(tenant.status) %>">
                <%= tenant.status.titleize %>
              </span>
            </div>

            <%# Quick Stats %>
            <div class="mt-6 grid grid-cols-2 gap-4 text-center text-xs font-medium text-gray-500">
              <div class="px-4 py-2 bg-gray-50 rounded-lg">
                <span class="block text-lg font-semibold text-gray-900 mb-1">
                  <%= tenant.features&.count %>
                </span>
                Features
              </div>
              <div class="px-4 py-2 bg-gray-50 rounded-lg">
                <span class="block text-lg font-semibold text-gray-900 mb-1">
                  <%= tenant.created_at.strftime("%b %d, %Y") %>
                </span>
                Created
              </div>
            </div>
          </div>

          <%# Card Actions %>
          <div class="border-t border-gray-200 bg-gray-50 px-6 py-3">
            <div class="flex justify-between items-center">
              <%= link_to tenant_path(tenant), class: "text-sm text-blue-600 hover:text-blue-700 font-medium" do %>
                View details
                <span aria-hidden="true"> &rarr;</span>
              <% end %>

              <div class="flex items-center space-x-3">
                <%= link_to edit_tenant_path(tenant), class: "text-gray-400 hover:text-gray-500" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                <% end %>

                <%= button_to tenant_path(tenant), 
                    method: :delete, 
                    class: "text-gray-400 hover:text-red-500",
                    data: { 
                      turbo_confirm: "Are you sure you want to delete this organization? This action cannot be undone." 
                    } do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%# Empty State %>
    <% if @tenants.empty? %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No organizations</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new organization.</p>
        <div class="mt-6">
          <%= link_to new_tenant_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            New Organization
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>