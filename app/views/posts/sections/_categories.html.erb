<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-8">Featured Categories</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    <% ["Electronics", "Fashion", "Home", "Sports"].each do |category| %>
      <div class="relative rounded-lg overflow-hidden group h-64">
        <div class="absolute inset-0 bg-gray-200 group-hover:opacity-75 transition duration-300">
          <%= image_tag "categories/#{category.downcase}.jpg", class: "w-full h-full object-cover" %>
        </div>
        <div class="absolute inset-0 flex items-center justify-center">
          <h3 class="text-xl font-semibold text-white shadow-text"><%= category %></h3>
        </div>
      </div>
    <% end %>
  </div>
</div>