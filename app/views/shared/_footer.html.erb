      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-slate-700 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="text-slate-400 text-sm">
          &copy; <%= Time.current.year %> Your Store. All rights reserved.
        </div>
        
        <!-- Legal Links -->
        <div class="flex space-x-6">
          <%= link_to "Privacy Policy", "#", class: "text-slate-400 hover:text-white text-sm transition duration-150" %>
          <%= link_to "Terms of Service", "#", class: "text-slate-400 hover:text-white text-sm transition duration-150" %>
          <%= link_to "Cookie Policy", "#", class: "text-slate-400 hover:text-white text-sm transition duration-150" %>
        </div>
      </div>
    </div>
  </div>
</footer>