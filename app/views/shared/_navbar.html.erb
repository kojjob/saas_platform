<header class="bg-white/80 backdrop-blur-md sticky top-0 z-50 border-b border-gray-100">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" data-controller="navbar">
    <div class="flex justify-between items-center h-16">
      <!-- Logo Section -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "flex items-center space-x-2" do %>
          <!-- Store Icon -->
          <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          <span class="text-2xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
            Store
          </span>
        <% end %>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <!-- Category Dropdown -->
        <div class="relative group">
          <button class="flex items-center space-x-1 text-gray-600 hover:text-gray-900 transition">
            <span>Categories</span>
            <svg class="w-4 h-4 group-hover:rotate-180 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <!-- Dropdown Menu -->
          <div class="absolute left-0 mt-2 w-48 rounded-lg bg-white shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform origin-top scale-95 group-hover:scale-100">
            <div class="p-2 space-y-1">
               <%= link_to "#", class: "flex items-center space-x-2 px-4 py-2 text-sm text-gray-700 rounded-lg hover:bg-indigo-50" do %>
                <svg class="w-4 h-4 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span>Electronics</span>
              <% end %>

                  <%= link_to "#", class: "flex items-center space-x-2 px-4 py-2 text-sm text-gray-700 rounded-lg hover:bg-indigo-50" do %>
                <svg class="w-4 h-4 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span>Fashion</span>
              <% end %>

              <%= link_to  "#", class: "flex items-center space-x-2 px-4 py-2 text-sm text-gray-700 rounded-lg hover:bg-indigo-50" do %>
                <svg class="w-4 h-4 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                <span>Home</span>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Search Bar -->
        <div class="relative flex-1 max-w-lg">
          <%= form_with url: root_path, method: :get, class: "relative" do |f| %>
            <input type="text" 
                   name="query" 
                   placeholder="Search products..." 
                   class="w-full pl-10 pr-4 py-2 rounded-full bg-gray-50 border-none ring-1 ring-gray-200 focus:ring-2 focus:ring-indigo-500 transition duration-200"
            >
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
          <% end %>
        </div>

        <!-- Navigation Links -->
        <%= link_to "Products", root_path, class: "text-gray-600 hover:text-gray-900 transition" %>
        <%= link_to "New Arrivals", "#", class: "text-gray-600 hover:text-gray-900 transition" %>
      </div>

      <!-- Right Navigation -->
      <div class="flex items-center space-x-6">
        <!-- Shopping Cart -->
        <button class="relative p-2 text-gray-600 hover:text-gray-900 transition">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          <span class="absolute -top-1 -right-1 w-5 h-5 rounded-full bg-indigo-600 text-white text-xs flex items-center justify-center">
            3
          </span>
        </button>

        <!-- Authentication Links -->
        <%# if authenticated? %>
          <button class="relative p-2 text-gray-600 hover:text-gray-900 transition">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
            <span class="absolute -top-1 -right-1 w-5 h-5 rounded-full bg-red-500 text-white text-xs flex items-center justify-center">
              2
            </span>
          </button>

          <!-- User Menu -->
          <div class="relative group">
            <button class="flex items-center space-x-1">
              <div class="w-8 h-8 rounded-full bg-indigo-100 text-indigo-600 flex items-center justify-center">
                <span class="text-sm font-medium">JD</span>
              </div>
            </button>
            <div class="absolute right-0 mt-2 w-48 rounded-lg bg-white shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform origin-top scale-95 group-hover:scale-100">
              <div class="py-2">
                <%#= link_to "Profile", "#", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-indigo-50" %>
                <%#= link_to "Settings", "#", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-indigo-50" %>
                <%#= button_to "Log out", session_path, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-indigo-50" %>
              </div>
            </div>
          </div>
        <%# else %>
          <%#= link_to "Login", new_session_path, class: "text-gray-600 hover:text-gray-900 transition" %>
          <%#= link_to "Sign up", "#", class: "inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-full text-white bg-indigo-600 hover:bg-indigo-700 transition" %>
        <%# end %>

        <!-- Mobile Menu Button -->
        <button class="p-2 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-50 md:hidden focus:outline-none" data-action="navbar#toggleMenu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div class="md:hidden hidden" data-navbar-target="mobileMenu">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <%#= link_to "Products", products_path, class: "block px-3 py-2 rounded-lg text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50" %>
        <%#= link_to "Categories", "#", class: "block px-3 py-2 rounded-lg text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50" %>
        <%# = link_to "New Arrivals", "#", class: "block px-3 py-2 rounded-lg text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50" %>
      </div>
    </div>
  </nav>
</header>